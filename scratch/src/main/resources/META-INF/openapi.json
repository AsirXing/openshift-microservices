{
  "swagger" : "2.0",
  "info" : {
    "title" : "CandV",
    "description" : "The CandV API",
    "version" : "0.0.1"
  },
  "basePath" : "/api/v0",
  "schemes" : [ "http" ],
  "consumes" : [ "application/json" ],
  "produces" : [ "application/json" ],
  "paths" : {
    "/boards" : {
      "post" : {
        "description" : "Add a new board",
        "produces" : [ "application/json" ],
        "responses" : {
          "200" : {
            "description" : "add board successful",
            "schema" : {
              "title" : "NewBoardId",
              "items" : {
                "$ref" : "#/definitions/Identifier"
              }
            }
          },
          "default" : {
            "description" : "unexpected error",
            "schema" : {
              "$ref" : "#/definitions/Error"
            }
          }
        }
      }
    },
    "/boards/{boardId}" : {
      "get" : {
        "description" : "Returns the JSON for the entire clipboard",
        "produces" : [ "application/json" ],
        "parameters" : [ {
          "name" : "boardId",
          "in" : "path",
          "description" : "ID of item to fetch from the database",
          "required" : true,
          "type" : "integer",
          "format" : "int64"
        } ],
        "responses" : {
          "200" : {
            "description" : "The list of all board items",
            "schema" : {
              "title" : "Items",
              "type" : "array",
              "items" : {
                "$ref" : "#/definitions/Item"
              }
            }
          },
          "default" : {
            "description" : "unexpected error",
            "schema" : {
              "$ref" : "#/definitions/Error"
            }
          }
        }
      }
    },
    "/boards/{boardId}/items" : {
      "post" : {
        "description" : "Add an item into this board",
        "produces" : [ "application/json" ],
        "parameters" : [ {
          "name" : "boardId",
          "in" : "path",
          "description" : "ID of board to add this item into",
          "required" : true,
          "type" : "integer",
          "format" : "int64"
        } ],
        "responses" : {
          "200" : {
            "description" : "add item successful",
            "schema" : {
              "title" : "NewItemId",
              "items" : {
                "$ref" : "#/definitions/Identifier"
              }
            }
          },
          "default" : {
            "description" : "unexpected error",
            "schema" : {
              "$ref" : "#/definitions/Error"
            }
          }
        }
      }
    },
    "/boards/{boardId}/items/{itemId}" : {
      "get" : {
        "description" : "Returns the JSON for a specific item in a board",
        "produces" : [ "application/json" ],
        "parameters" : [ {
          "name" : "boardId",
          "in" : "path",
          "description" : "ID of board to fetch from the database",
          "required" : true,
          "type" : "integer",
          "format" : "int64"
        }, {
          "name" : "itemId",
          "in" : "path",
          "description" : "ID of item to fetch from the database",
          "required" : true,
          "type" : "integer",
          "format" : "int64"
        } ],
        "responses" : {
          "200" : {
            "description" : "The details about an item",
            "schema" : {
              "$ref" : "#/definitions/Item"
            }
          },
          "default" : {
            "description" : "unexpected error",
            "schema" : {
              "$ref" : "#/definitions/Error"
            }
          }
        }
      },
      "delete" : {
        "description" : "Removes the item from this board",
        "produces" : [ "application/json" ],
        "parameters" : [ {
          "name" : "boardId",
          "in" : "path",
          "description" : "ID of board to delete from",
          "required" : true,
          "type" : "integer",
          "format" : "int64"
        }, {
          "name" : "itemId",
          "in" : "path",
          "description" : "ID of item to delete",
          "required" : true,
          "type" : "integer",
          "format" : "int64"
        } ],
        "responses" : {
          "204" : {
            "description" : "pet deleted"
          },
          "default" : {
            "description" : "unexpected error",
            "schema" : {
              "$ref" : "#/definitions/Error"
            }
          }
        }
      }
    },
    "/test" : {
      "get" : {
        "description" : "testing get",
        "responses" : {
          "200" : {
            "description" : "yay",
            "schema" : {
              "type" : "string"
            },
            "examples" : {
              "application/json" : "\"some text\""
            }
          }
        }
      }
    }
  },
  "definitions" : {
    "Item" : {
      "type" : "object",
      "properties" : {
        "timestamp" : {
          "description" : "A timestamp of when the item was put in the clipboard as ISO 8601 e.g.: 2014-09-08T08:02:17-05:00",
          "type" : "string"
        },
        "raw" : {
          "description" : "The raw string of the item on the clipboard",
          "type" : "string"
        }
      }
    },
    "Identifier" : {
      "description" : "An identifier for a board or item",
      "type" : "integer"
    },
    "Error" : {
      "required" : [ "code", "message" ],
      "properties" : {
        "code" : {
          "format" : "int32",
          "type" : "integer"
        },
        "message" : {
          "type" : "string"
        }
      }
    }
  }
}